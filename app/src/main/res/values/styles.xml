        <item name="android:layout_marginBottom">@dimen/marging</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bpplusmoins" parent="Theme.AppCompat.Light.DarkActionBar">
